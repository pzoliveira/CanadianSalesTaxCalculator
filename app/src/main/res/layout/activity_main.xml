<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPremier"
    android:orientation="vertical">

    <TextView
        android:textSize="@dimen/text_title"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorPremier"
        android:text="Canadian Tax Sales Calculator" />

    <Spinner
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:id="@+id/spinnerProvinceList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:textSize="@dimen/text_initial_cost"
        android:gravity="center"
        android:textStyle="italic"
        android:id="@+id/tvInitialCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorPremier"
        android:text="Initial Cost: $0" />

    <SeekBar
        android:max="1000"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:id="@+id/sbInitialCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:textSize="@dimen/text_total_cost"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/tvTotalCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorPrimaryDark"
        android:text="Total Cost: $" />

</LinearLayout>